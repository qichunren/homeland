<% title_tag t('users.forget_password') %>

<div class="row grid grid-cols-12 gap-4">
  <div class="col col-span-3"></div>
  <div class="col-md-6 col-span-6">
    <div class="card card-lg shadow-sm bg-white rounded-lg p-6">
      <div class="card-body">
        <div class="card-title text-2xl"><%= t('users.forget_password') %></div>

        <%= form_for resource, as: resource_name, url: password_path(resource_name), method: :post do |f| %>
          <%= render "shared/error_messages", target: resource %>
          <div class="form-group flex flex-col py-3">
            <%= f.text_field :email, type: :email, class: "form-control form-control-lg border p-2 rounded-md", placeholder: t("activerecord.attributes.user.email") %>
            <p class="form-text text-muted">此功能将会发送一个找回密码的特别链接到你的邮箱，通过改链接可以进入重置密码的页面。</p>
          </div>
          <div class="form-group flex flex-col py-3">
            <div class="input-group input-group-lg">
              <%= render "/shared/captcha_input" %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.submit "找回密码", class: "btn btn-lg btn-block btn-primary bg-blue-700 text-white text-xl rounded-lg w-full block py-2", 'data-disable-with' => t("common.submitting") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col col-span-3"></div>
</div>
