<%= render "/shared/editor_toolbar" %>
<%= form_for(Reply.new, url: topic_replies_path(@topic), remote: true, id: "new_reply") do |f| %>

  <div class="form-group">
    <%= f.text_area :body, class: "topic-editor form-control border p-2 rounded-md w-full", rows: "4", tabindex: "1" %>
  </div>
  <%= f.hidden_field :reply_to_id %>
  <div class="submit-buttons flex items-center justify-between mt-4">
    <button type="submit" id="reply-button" class="btn btn-primary flex-none bg-blue-700 text-white text-xl rounded-lg px-3 py-2 w-24" tabindex="2", data-disable-with='<%= t("topics.submit_reply") %>'><%= t("topics.submit_reply")%></button>
    <span class="help-inline flex-1" style="padding-left: 5px;" title="Ctrl + Enter"><kbd class="bg-gray-200 p-2">Command</kbd> + <kbd class="bg-gray-200 p-2">Enter</kbd></span>

    <div class="pull-right"><a href="/markdown" target="_blank" class="text-blue-600 hover:underline"><%= t("topics.form.markdown_guides") %></a></div>
  </div>
<% end %>
