<div class="card-title text-2xl">Install Plugin</div>
<%= form_for User.new, url: admin_plugins_path, method: :post, html: { enctype: "multipart/form-data" } do |f| %>
  <div class="form-group">
    <label class="form-label">Select plugin zip</label>
    <input name="file" type="file" accept="*.zip" class="form-control border p-2">
    <div class="form-text">Please select the Homeland plugin zip package and install it. Do not install non-Homeland plugins, otherwise it will cause unexpected problems!</div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Install</button>
  </div>
<% end %>
